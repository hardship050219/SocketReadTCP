<ResourceDictionary
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:CompileBindings="True">
	<ControlTheme x:Key="{x:Type PathIcon}" TargetType="PathIcon">
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="Height" Value="{DynamicResource IconElementThemeHeight}" />
		<Setter Property="Width" Value="{DynamicResource IconElementThemeWidth}" />
		<Setter Property="Template">
			<ControlTemplate TargetType="PathIcon">
				<Border Background="{TemplateBinding Background}">
					<Viewbox Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
						<Path
							Name="PART_Path"
							Data="{TemplateBinding Data}"
							Fill="{TemplateBinding Foreground}"
							Stretch="Uniform" />
					</Viewbox>
				</Border>
			</ControlTemplate>
		</Setter>
		<Style Selector="^.Active /template/ Path#PART_Path">
			<Setter Property="Fill" Value="{TemplateBinding BorderBrush}" />
		</Style>
	</ControlTheme>

	<ControlTheme x:Key="PathIcon-Inner" TargetType="PathIcon">
		<Setter Property="Width" Value="{StaticResource Width-IconMedium}" />
		<Setter Property="Height" Value="{StaticResource Width-IconMedium}" />
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="Template">
			<ControlTemplate TargetType="PathIcon">
				<Border Background="{TemplateBinding Background}">
					<Viewbox
						Width="{TemplateBinding Width}"
						Height="{TemplateBinding Height}">
						<Path
							Name="PART_Path"
							Width="24"
							Height="24"
							Data="{TemplateBinding Data}"
							Fill="{TemplateBinding Foreground}" />
					</Viewbox>
				</Border>
			</ControlTemplate>
		</Setter>
		<Style Selector="^.Active /template/ Path#PART_Path">
			<Setter Property="Fill" Value="{TemplateBinding BorderBrush}" />
		</Style>
		<Style Selector="^.ExtraSmall">
			<Setter Property="Width" Value="{StaticResource Width-IconExtraSmall}" />
			<Setter Property="Height" Value="{StaticResource Width-IconExtraSmall}" />
		</Style>
		<Style Selector="^.Small">
			<Setter Property="Width" Value="{StaticResource Width-IconSmall}" />
			<Setter Property="Height" Value="{StaticResource Width-IconSmall}" />
		</Style>
		<Style Selector="^.Large">
			<Setter Property="Width" Value="{StaticResource Width-IconLarge}" />
			<Setter Property="Height" Value="{StaticResource Width-IconLarge}" />
		</Style>
		<Style Selector="^.ExtraLarge">
			<Setter Property="Width" Value="{StaticResource Width-IconExtraLarge}" />
			<Setter Property="Height" Value="{StaticResource Width-IconExtraLarge}" />
		</Style>
	</ControlTheme>
</ResourceDictionary>